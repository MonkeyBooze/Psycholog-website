# Copy this file to .env and fill in your actual values

# Security
SECRET_KEY=your-secret-key-here-changeme-in-production
DEBUG=False

# Database Configuration
# For local development (SQLite - default):
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL - recommended):
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example: DATABASE_URL=postgresql://psycho_user:your_password@localhost:5432/psycho_db
# Or for Heroku/cloud: DATABASE_URL=postgres://username:password@hostname:5432/database_name

# Email Configuration (REQUIRED for appointment notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
EMAIL_PORT=587
EMAIL_FROM=your-email@gmail.com

# Google Analytics 4 (optional - for traffic tracking)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Allowed hosts for production (comma-separated)
ALLOWED_HOSTS=127.0.0.1,localhost,yourdomain.com,www.yourdomain.com

# Security settings (IMPORTANT: set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# For production with HTTPS, use these settings instead:
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000